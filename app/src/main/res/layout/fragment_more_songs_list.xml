<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="#fff"
    android:id="@+id/container"
    android:paddingBottom="16dp"
    tools:context=".showcase.nongames.fullapp.MoreSongsListFragment">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="360dp"
       android:id="@+id/coverImage"
       android:scaleType="fitXY"
       />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/title"
        android:textSize="14sp"
        tools:text="This is a new song there"
        />
    <Button
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:text="Play Song"
        android:paddingEnd="8dp"
        android:layout_gravity="center"
        android:background="#000"
        android:textColor="#fff"
        android:fontFamily="@font/source_sans_pro_bold"
        android:drawableStart="@drawable/ic_play_circle_filled_black_24dp"
        />


</LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/adUnit"
        android:scaleType="fitXY"
        />
</FrameLayout>